<%- layout('boilerplate')%>
<link rel="stylesheet" href="/stylesheets/create.css">
<div class="row">
     
    <div class="col-6-sm col-12 d-flex p-0 justify-content-center">
     
        <form action="/p" method="post" novalidate class=" mt-4 mb-4 validated-form d-flex justify-content-center" enctype="multipart/form-data">
            
        <article class="post">
            
            <div class="post-header mb-1 d-flex">
                <div class="usr-img-gps d-flex align-items-center">
                    <div class="header-user-img">
                        <img width="32px" height="32px"
                            src="https://images.unsplash.com/photo-1504208434309-cb69f4fe52b0?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
                            alt="">
                    </div>
                    <div class="username-location-header">
                        <div class="username">
                            <b>username</b>
                            <!-- <b><post.author  %></b> -->
                            <span class="text-muted">â€¢ 42m</span>
                        </div>
                        <div class="location"><input type="text" name="post[location]" placeholder="      location (optional)" class="loadingBackground" id="inputLocation"></div>
                    </div>
                </div>
                <div class="post-settings d-flex align-items-center">
                    <button>
                        <svg aria-label="More options" class="_ab6-" color="rgb(0, 0, 0)" fill="rgb(0, 0, 0)"
                            height="24" role="img" viewBox="0 0 24 24" width="24">
                            <circle cx="12" cy="12" r="1.5"></circle>
                            <circle cx="6" cy="12" r="1.5"></circle>
                            <circle cx="18" cy="12" r="1.5"></circle>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="image-container loadingBackground text-center">
                <div class="photo-uploading mt-1 ">
                    <label  class="custom-file-upload">
                    <input type="file" name="image" id="imageInput" class="">
                    <b class="input-text">Select photos</b>
                    </label>
                    <br>
                    <b class="more-images"></b>
                </div>
                <img src="" class="image img-fluid d-none" alt="">
            </div>
            <div class="p-1 pt-0">
            <div class="post-actions m-0 d-flex">
                <button><svg aria-label="Like" class="x1lliihq x1n2onr6" color="rgb(38, 38, 38)" fill="rgb(38, 38, 38)" height="24" role="img" viewBox="0 0 24 24" width="24"><title>Like</title><path d="M16.792 3.904A4.989 4.989 0 0 1 21.5 9.122c0 3.072-2.652 4.959-5.197 7.222-2.512 2.243-3.865 3.469-4.303 3.752-.477-.309-2.143-1.823-4.303-3.752C5.141 14.072 2.5 12.167 2.5 9.122a4.989 4.989 0 0 1 4.708-5.218 4.21 4.21 0 0 1 3.675 1.941c.84 1.175.98 1.763 1.12 1.763s.278-.588 1.11-1.766a4.17 4.17 0 0 1 3.679-1.938m0-2a6.04 6.04 0 0 0-4.797 2.127 6.052 6.052 0 0 0-4.787-2.127A6.985 6.985 0 0 0 .5 9.122c0 3.61 2.55 5.827 5.015 7.97.283.246.569.494.853.747l1.027.918a44.998 44.998 0 0 0 3.518 3.018 2 2 0 0 0 2.174 0 45.263 45.263 0 0 0 3.626-3.115l.922-.824c.293-.26.59-.519.885-.774 2.334-2.025 4.98-4.32 4.98-7.94a6.985 6.985 0 0 0-6.708-7.218Z"></path></svg></button>
                <button><svg aria-label="Comment" class="x1lliihq x1n2onr6" color="rgb(0, 0, 0)" fill="rgb(0, 0, 0)" height="24" role="img" viewBox="0 0 24 24" width="24"><title>Comment</title><path d="M20.656 17.008a9.993 9.993 0 1 0-3.59 3.615L22 22Z" fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="2"></path></svg></button>
                <button><svg aria-label="Share Post" class="x1lliihq x1n2onr6" color="rgb(0, 0, 0)" fill="rgb(0, 0, 0)" height="24" role="img" viewBox="0 0 24 24" width="24"><title>Share Post</title><line fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="2" x1="22" x2="9.218" y1="3" y2="10.083"></line><polygon fill="none" points="11.698 20.334 22 3.001 2 3.001 9.218 10.084 11.698 20.334" stroke="currentColor" stroke-linejoin="round" stroke-width="2"></polygon></svg></button>
                <button class="ms-auto"><svg aria-label="Save" class="x1lliihq x1n2onr6" color="rgb(0, 0, 0)" fill="rgb(0, 0, 0)" height="24" role="img" viewBox="0 0 24 24" width="24"><title>Save</title><polygon fill="none" points="20 21 12 13.44 4 21 4 3 20 3 20 21" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></polygon></svg></button>
            </div>
            
            <div class="post-description loading loadingBackground">
                <b class="username-desc">username</b>
                <textarea name="post[description]" id="" class="loadingBackground textarea-desc text-muted" cols="500" rows="4" placeholder="                  ">                 Describe your post</textarea>
            </div>
            <div class="d-flex justify-content-center">
                <button class="submit-post-button" type="submit">Post</button>
            </div>
            
        </article>
    </form>
    </div>
</div>
<script src="/js/create.js"></script>